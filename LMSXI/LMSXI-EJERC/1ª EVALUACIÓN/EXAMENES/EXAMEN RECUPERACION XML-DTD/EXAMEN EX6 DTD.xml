<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE clase [
<!ELEMENT clase (alumno*)>
<!ELEMENT alumno (nome, apelidos, domicilio, telefono, equipo*, procedencia, comentario*, axuda*, afeccions*)>
<!ELEMENT nome (#PCDATA)>
<!ELEMENT apelidos (#PCDATA)>
<!ELEMENT domicilio (#PCDATA)>
<!ELEMENT telefono (#PCDATA)>
<!ELEMENT equipo (#PCDATA)>
<!ELEMENT comentario ANY>
<!ELEMENT axuda EMPTY>

<!ELEMENT procedencia (orixe, direccion, cidade, provincia, nacionalidade)>
<!ELEMENT orixe (#PCDATA)>
<!ELEMENT direccion (#PCDATA)>
<!ELEMENT cidade (#PCDATA)>
<!ELEMENT provincia (#PCDATA)>
<!ELEMENT nacionalidade (#PCDATA)>

<!ATTLIST alumno num_alumno ID #REQUIRED>
<!ATTLIST alumno altura CDATA #IMPLIED>
<!ATTLIST alumno sexo (home | muller) #IMPLIED>
<!ATTLIST telefono propiedade (pai | nai | propio | titor) #REQUIRED>
<!ATTLIST axuda axudante IDREFS #IMPLIED>
]>
